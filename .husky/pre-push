echo 'ğŸš¨ Validating the branch name before pushing the code'

local_branch="$(git rev-parse --abbrev-ref HEAD)"

valid_branch_regex="^(feat|feature|fix|docs|style|refactor|test|chore)\/[a-zA-Z0-9#]+([-_#][a-zA-Z0-9#]+)*$"

if [[ ! $local_branch =~ $valid_branch_regex ]]
then
    echo "âŒğŸš€ Oops! Your branch name doesn't match our rhythm. We groove to these types: feat, fix, docs, style, refactor, test, chore. Please follow the format: <type>/<alias>. Example: feature/awesome-update ğŸµâœ¨"
    exit 1
fi

# Run linting
echo "ğŸ§¹ Running lint check..."
npm run lint
if [ $? -ne 0 ]; then
    echo "âŒ Linting failed. Please fix the issues before pushing."
    exit 1
fi

# Run formatting
echo "âœ¨ Running format check..."
npm run format
if [ $? -ne 0 ]; then
    echo "âŒ Code formatting check failed. Please format your code before pushing."
    exit 1
fi

echo "âœ… All checks passed! Pushing the code... ğŸš€"

exit 0
